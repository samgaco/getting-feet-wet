
<h1> Create a New user </h1>

<%= form_for @new_users ,url: {action: 'create'} do  |f| %>
    
    <%= f.label :name %><br />
    <%= f.text_field :name %>
    <br/>
    <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
    </p>
    <br/>

    <%= f.submit %>
    
<% end %>
<br />
<%= link_to 'back' , users_path %>